{{> nav}}

<div class="signup-container clearfix">
	<div class="signup-inner">

		<div class="row">
			<div class="col-md-6 hidden-sm-down signup-image">
			</div>
			<div class="col-md-6 signup-form">
				<div class="signup-form-inner">
					<h2>Sign Up</h2>
					<div style="color:red;">{{ message }}</div>
					<form action="/signup2" method="post">
					  <div class="form-group">
					    <label for="email">Email address</label>
					    <input name="email" type="email" class="form-control" id="email" placeholder="Email">
					  </div>
					  <div class="form-group">
					    <label for="password">Password</label>
					    <input type="password" name="password" class="form-control" id="password" placeholder="Password">
					  </div>
					  <div class="form-group">
					    <label for="password">Confirm Password</label>
					    <input type="password" name="confirmPassword" class="form-control" id="confirmPassword" placeholder="Confirm Password">
					  </div>
					  <button type="submit" value="Log In" class="btn btn-primary" value="Register">Submit</button>
					</form>		
				</div>		
			</div>
		</div>


	</div>
</div>

{{> footer}}